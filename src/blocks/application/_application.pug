section.page-application
  .grid
    .grid__row
      .page-application__left-column
        .page-application__header-buttons
          +button('Start New', 'header')(
            data-toggle='modal'
            data-target='#modalAttention'
          )
            +icon('pencil', 'header')(width='16' height='16')
          +button('New Window', 'header')
            +icon('plus', 'header')(width='16' height='16')
        .page-application__row.page-application__row_input-title
          .page-application__wrapper-input-title
            input.page-application__input-title#input-title(
              type='text'
              value='New Entry'
            )
          .page-application__wrapper-not-saved
            .page-application__not-saved
              span Entry Not Saved
              b 0
            +button('Full Screen', 'full-screen')
              +icon('full-screen', 'full-screen')(width='18' height='18')
        .page-application__row.page-application__row_textarea
          textarea.page-application__textarea#input-text(
            style='background-color: #ffffff; color: #55616f; font-family: Tahoma;'
          )
        .page-application__keyboard-buttons(
          class='page-application__keyboard-buttons_uppercase'
          id='keyboard'
        )
          -
            var names = [
              ['а', 'б', 'в', 'г', 'д', 'е', 'ё', 'ж', 'з', 'и', 'й', 'к'],
              ['л', 'м', 'н', 'о', 'п', 'р', 'с', 'т', 'у', 'ф', 'х'],
              ['ц', 'ч', 'ш', 'щ', 'ъ', 'ы', 'ь', 'э', 'ю', 'я']
            ]
          each row in names
            .page-application__row.page-application__row_keyboard
              each name in row
                +button(name, 'keyboard')
          .page-application__row.page-application__row_keyboard
            -
              var buttons = [
                {
                  modifiers: 'keyboard keyboard-shift-key',
                  name: 'Shift',
                  id: 'button-shift'
                },
                {
                  modifiers: 'keyboard keyboard-space-key',
                  name: 'Space'
                },
                {
                  modifiers: 'keyboard keyboard-shift-key',
                  name: 'Латин.'
                }
              ]
            each button in buttons
              +button(button.name, button.modifiers)(id=button.id)
      .page-application__right-column
        .page-application__main-buttons
          -
            var buttons = [
              {
                icon: {
                  name: 'transliterate',
                  width: '24',
                  height: '24'
                },
                modifiers: 'main main-active',
                name: 'Transliterate everything'
              },
             {
                icon: {
                  name: 'orthography',
                  width: '24',
                  height: '24'
                },
                modifiers: 'main',
                name: 'Check orthography'
              },
             {
                icon: {
                  name: 'settings',
                  width: '24',
                  height: '24'
                },
                modifiers: 'main',
                name: 'Orthography settings'
              }
            ]
          each button in buttons
            - var { name, width, height } = button.icon
            +button(button.name, button.modifiers)
              +icon(name, 'main')(width=width height=height)
        .page-application__group
          -
            var buttons = [
              {
                icon: {
                  name: 'save',
                  width: '16',
                  height: '16'
                },
                modifier: 'options',
                name: 'Save'
              },
              {
                icon: {
                  name: 'print',
                  width: '16',
                  height: '14'
                },
                modifier: 'options',
                name: 'Print'
              },
              {
                icon: {
                  name: 'download',
                  width: '13',
                  height: '16'
                },
                modifier: 'options',
                name: 'Download txt file'
              },
              {
                icon: {
                  name: 'delete',
                  width: '16',
                  height: '16'
                },
                modifier: 'options',
                name: 'Delete version',
                disabled: true
              },
              {
                icon: {
                  name: 'erase',
                  width: '14',
                  height: '17'
                },
                modifier: 'options',
                name: 'Erase completely',
                disabled: true
              }
            ]
          each button in buttons
            - var { name, width, height } = button.icon
            if button.disabled
              +button(button.name, button.modifier)(disabled)
                +icon(name, 'options')(width=width height=height)
            else
              +button(button.name, button.modifier)
                +icon(name, 'options')(width=width height=height)
        .page-application__group.page-settings
          .page-settings__title Settings
          .page-application__row.page-application__row_settings
            .page-settings__subtitle Field Color:
            +button('Color Picker', 'color-picker')(
              id='input-field-color'
              data-default-value='#ffffff'
              style='background-color: #ffffff;'
            )
            .page-settings__output#output-field-color #ffffff
          .page-application__row.page-application__row_settings
            .page-settings__subtitle Text Color:
            +button('Color Picker', 'color-picker')(
              id='input-text-color'
              data-default-value='#55616f'
              style='background-color: #55616f;'
            )
            .page-settings__output#output-text-color #55616f
          .page-application__row.page-application__row_settings
            .page-settings__subtitle Font Family:
            select.page-settings__select#input-font-family
              option(value='Tahoma' selected) Tahoma
              option(value='Arial') Arial
              option(value='Open Sans') Open Sans
          .page-application__row.page-application__row_settings
            +button('Reset Settings', 'reset')(id='button-reset')
          hr.page-settings__line
          .page-application__row.page-application__row_settings
            input.page-settings__checkbox#checkbox(type='checkbox')
            label.page-settings__label(for='checkbox') Autosave
          .page-application__row.page-application__row_settings
            .page-settings__subtitle Timeframe:
            select.page-settings__select
              option(value='1' selected) 1 minute
              option(value='3') 3 minutes
              option(value='10') 10 minutes
